# RAG AI Agent with CopilotKit Development Environment Variables
# Copy this file to .env and fill in your actual API keys
# NEVER commit .env to version control

# Frontend Environment
NODE_ENV=development
NEXT_PUBLIC_BACKEND_URL=http://localhost:8000

# CopilotKit Integration (https://dashboard.copilotkit.ai)
COPILOTKIT_API_KEY=your_copilotkit_api_key_here

# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-your_openai_key_here

# Anthropic Claude API Key (https://console.anthropic.com/account/keys)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Next.js Public API Key (if needed)
NEXT_PUBLIC_API_KEY=your_public_api_key_here

# Backend Database
POSTGRES_URL=postgresql://postgres:postgres@localhost:5432/ragdb
PGVECTOR_ENABLED=true

# LangSmith Observability (Optional but recommended)
# https://smith.langchain.com
LANGSMITH_API_KEY=lsv2_pt_your_langsmith_key_here
LANGSMITH_PROJECT=rag-agent-development
LANGSMITH_TRACING=true

# Tavily Web Search API (https://tavily.com)
TAVILY_API_KEY=your_tavily_api_key_here

# For 1Password CLI integration (optional)
# OP_CONNECT_TOKEN=your_1password_token_here

# Debug Logging
DEBUG=rag-agent:*
