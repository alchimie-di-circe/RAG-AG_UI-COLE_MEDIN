#!/usr/bin/env bash

# direnv configuration file for RAG AI Agent development
# This file automatically loads environment variables from your 1Password vault
# when you cd into the repository

# Uncomment the appropriate vault configuration for your setup
# Option 1: Using 1Password CLI with your vault (RECOMMENDED)
# Make sure you have logged in with: op account add
# And set your vault reference correctly

# Export NODE environment
export NODE_ENV=${NODE_ENV:=development}

# CopilotKit API Key from 1Password
# Replace 'Your Vault Name' with your actual vault name
# Replace 'RAG-Agent' with your actual item name in 1Password
export COPILOTKIT_API_KEY="$(op read "op://Your Vault Name/RAG-Agent/copilotkit_api_key")"

# OpenAI API Key from 1Password
export OPENAI_API_KEY="$(op read "op://Your Vault Name/RAG-Agent/openai_api_key")"

# Anthropic Claude API Key from 1Password
export ANTHROPIC_API_KEY="$(op read "op://Your Vault Name/RAG-Agent/anthropic_api_key")"

# Tavily Web Search API Key from 1Password
export TAVILY_API_KEY="$(op read "op://Your Vault Name/RAG-Agent/tavily_api_key")"

# LangSmith API Key from 1Password (Optional)
export LANGSMITH_API_KEY="$(op read "op://Your Vault Name/RAG-Agent/langsmith_api_key")"
export LANGSMITH_PROJECT="rag-agent-development"
export LANGSMITH_TRACING="true"

# Backend URL
export NEXT_PUBLIC_BACKEND_URL="${NEXT_PUBLIC_BACKEND_URL:=http://localhost:8000}"

# Database URL for PostgreSQL
export POSTGRES_URL="postgresql://postgres:postgres@localhost:5432/ragdb"
export PGVECTOR_ENABLED="true"

# Debug mode
export DEBUG="${DEBUG:=false}"

echo "âœ“ Environment variables loaded from 1Password vault"
